{% set guide = guides[0] %}
{% include "molecules-header" %}
<main class="wm-big-header__profile">
<div class="container wm-search-wrapper-small">
  <div class="row">
    <!-- Left -->
    <div class="col-md-3">
      <div class="row section-wrapper">
        <div class="col-md-12">
          <img src="../../assets/images/{{guide.image}}" alt="..." class="img-thumbnail">
        </div>
      </div>
      <div class="row section-wrapper">
        <div class="col-md-12">
          <div class="row">
            <div class="col-md-12">
              <div class="filters-title">Interests</div>
              <ul class="interests-wrapper">
                <li><img src="../../assets/images/food.png" class="interest"></img></li>
                <li><img src="../../assets/images/film.png" class="interest"></img></li>
                <li><img src="../../assets/images/wine.png" class="interest"></img></li>
              </ul>
            </div>
          </div>
        </div>
      </div>
      <div class="row section-wrapper">
        <div class="col-md-12">
          {% for i in 1..guide.stars %}
            <img src="../../assets/images/star.png" class="rating"></img>
          {% endfor %}
        </div>
      </div>
      <div class="row section-wrapper">
          <div class="col-md-12">
            <div class="searchbox-short-description">{{guide.name}}</div>
          </div>
          <div class="col-md-12">
            <div class="searchbox-name"><strong>From: </strong>{{guide.placeOfResidence}}</div>
          </div>
      </div>
    </div>

    <!-- Right -->
    <div class="col-md-9">
      <h3>Direct requests</h3>
      <div class="row section-wrapper">
        {% include "molecules-traveler_request" %}
      </div>
      <h3>Travelers going to Dubai</h3>
      <div class="row section-wrapper">
        {% include "molecules-traveler_suggestion" %}
      </div>
      <div class="row section-wrapper">
        {% include "molecules-traveler_suggestion" %}
      </div>
    </div>
  </div>
</div>
</main>

{% include "molecules-footer" %}